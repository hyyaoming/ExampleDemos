<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.sampleview.trip.TripPointView
        android:id="@+id/pointView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomDotColor="#F25A49"
        app:dashColor="#888888"
        app:dashGap="3dp"
        app:dashWidth="1dp"
        android:background="#20303030"
        app:dotRadius="6dp"
        app:dotTextGap="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:paragraphGap="12dp"
        app:smallDotColor="#FFFFFF"
        app:textColor="#222222"
        app:textSize="16sp"
        app:topDotColor="#1495E6" />

</androidx.constraintlayout.widget.ConstraintLayout>